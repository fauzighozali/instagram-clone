<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.linustorvalds.listapps.LoginActivity">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="180dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="102dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="12dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText3"
        android:hint="Nomor telepon,email,atau nama pengguna"
        android:background="@drawable/border"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        tools:layout_editor_absoluteY="276dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints"
        android:textColorHint="#8cffffff"
        android:backgroundTint="#2dededed"
        android:layout_above="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="12dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText2"
        android:hint="Kata Sandi"
        android:background="@drawable/border"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        tools:layout_editor_absoluteY="276dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="14dp"
        android:textColorHint="#8cffffff"
        android:backgroundTint="#2dededed"
        android:layout_below="@+id/imageView9"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="309dp"
        android:layout_height="60dp"
        android:text="Masuk"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="327dp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="10dp"
        android:textColor="#7bffffff"
        android:backgroundTint="#2dededed"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"
        android:paddingTop="10dp"
        android:text="Lupa detail informasi masuk Anda? Dapatkan bantuan untuk masuk."
        android:textColor="#FFFFFFFF"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <View
        android:layout_width="120dp"
        android:layout_height="1dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="30dp"
        android:background="#bbb"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATAU"
        android:textStyle="bold"
        android:textColor="#ececec"
        android:layout_marginTop="390dp"
        android:layout_centerHorizontal="true"/>

    <View
        android:layout_width="123dp"
        android:layout_height="1dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="206dp"
        android:background="#bbb"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/facebook"
        android:layout_marginTop="420dp"
        android:layout_alignLeft="@+id/imageView9"
        android:layout_alignStart="@+id/imageView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk dengan Facebook"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_marginTop="428dp"
        android:layout_marginLeft="135dp"/>

    <View android:layout_width="294dp"
        android:layout_height="1dp"
        android:background="#bbb"
        android:layout_marginTop="453dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tidak punya akun? Buat Akun."
        android:textColor="#FFFFFFFF"
        android:textSize="12dp"
        android:layout_marginTop="460dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

</RelativeLayout>
